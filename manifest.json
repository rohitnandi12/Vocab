{
    "name" : "Vocab app - change name",
    "version" : "1.0",
    "description" : "Vocab assistant",
    "manifest_version" : 2,

    "permissions" : [
        "activeTab",
        "storage",
        "contextMenus",
        "tabs",
  	    "notifications",
  	    "http://api.wordnik.com:80/"
    ],
    
    "browser_action" : {
        "default_popup" : "popup/popup.html",
        "default_icon" : {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        },
        "default_title" : "Default title browser actions"
    },

    "background" : {
        "scripts" : ["background/background.js"],
        "persistent" : true
    },

    "options_page":"options/options.html",
    
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    }
}