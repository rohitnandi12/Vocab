{
    "name" : "VocabNotes",
    "version" : "1.0",
    "description" : "Vocab assistant",
    "manifest_version" : 2,

    "permissions" : [
        "storage",
  	    "notifications"
    ],
    
    "browser_action" : {
        "default_popup" : "popup/popup.html",
        "default_icon" : {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        },
        "default_title" : "Default title browser actions"
    },

    "background" : {
        "scripts": [
            "res/jquery-3.4.1.min.js",
            "db/db_chrome_storage.js",
            "utility/notification_master.js",
            "background/background.js"
        ],
        "persistent" : true
    },
  
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    }
}
